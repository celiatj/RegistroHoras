<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/wallpaper"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    android:paddingTop="40dp"
    tools:context=".FirebaseActivity">

    <LinearLayout
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="140dp"
        android:background="#4BFFFFFF"
        android:orientation="vertical"
        android:padding="15dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationViews"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:foregroundGravity="center"
            app:lottie_autoPlay="true"
            app:lottie_fileName="94123-1hour-login-effect.json"
            app:lottie_imageAssetsFolder="assets"
            app:lottie_loop="true" />


        <EditText
            android:id="@+id/edCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="sans-serif-smallcaps"
            android:hint="@string/correo"
            android:inputType="textEmailAddress"
            android:textColor="#00796B"
            android:textColorHint="#00796B"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="343dp"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edContraseya"
                android:layout_width="258dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="sans-serif-smallcaps"
                android:hint="@string/contrasenya"
                android:inputType="textPassword"
                android:textColor="#00796B"
                android:textColorHint="#00796B"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgOjo"
                android:layout_width="17dp"
                android:layout_height="33dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ojoc" />

        </LinearLayout>

        <EditText
            android:id="@+id/edtnombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="sans-serif-smallcaps"
            android:hint="@string/name"
            android:inputType="textPersonName"
            android:textColor="#00796B"
            android:textColorHint="#00796B"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="sans-serif-smallcaps"
            android:hint="@string/ap"
            android:inputType="textPersonName"
            android:textColor="#00796B"
            android:textColorHint="#00796B"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/EligeEmpresa"
            android:textColor="#00796B"
            android:textColorHint="#00796B"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spnEmpresas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="@string/empresas" />


        <Button
            android:id="@+id/btnlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/login" />

        <Button
            android:id="@+id/btnregistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/registro" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/recuerdame"
            android:textColor="#00796B"
            android:textColorHint="#00796B"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>